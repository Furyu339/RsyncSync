{
  "name": "rsyncsync",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main/index.cjs",
  "author": "furyu",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:electron:build\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron:build": "tsup --watch",
    "dev:electron": "wait-on tcp:5173 && wait-on \"dist-electron/main/index.cjs\" && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsup",
    "vendor:rsync": "python3 scripts/bundle_rsync.py",
    "dist:mac": "npm run build && electron-builder --mac --arm64 && node scripts/copy_app.mjs && node scripts/copy_dmg.mjs",
    "lint": "eslint ."
  },
  "dependencies": {
    "@pixi/filter-blur": "^5.2.1",
    "framer-motion": "^12.23.12",
    "echarts": "^5.5.1",
    "pixi.js": "^8.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^22.15.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "36.9.0",
    "electron-builder": "^26.0.17",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.5"
  }
}
